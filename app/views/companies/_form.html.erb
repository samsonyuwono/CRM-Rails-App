<%= form_for @company do |f| %>
 <%= f.hidden_field :user_id %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :revenue, "Revenue(in thousands):" %>
  <%= f.number_field :revenue %><br />



  Check this box for customer:<%= f.check_box :customer %><br />

  <% f.fields_for :leads, @company.leads.build  do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %>

    <%= i.label :email %>
    <%= i.text_field :email %>

    <%= i.label :phone_number %>
    <%= i.text_field :phone_number %>

    Check this box for contact:<%= f.check_box :contact %><br />


  <%= f.submit %>

  <% end %>
